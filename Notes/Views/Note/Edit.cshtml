@model Notes.Models.Note

<h4>Редактирование заметки</h4>
<form asp-action="edit" asp-controller="Note" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Header" class="control-label">Заголовок:</label>
        <input type="text" asp-for="Header" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label">Содержание:</label>
        <input type="text" asp-for="Content" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
